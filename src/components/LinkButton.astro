---
const { href } = Astro.props;
---

<a
  href={href}
  role="link"
  {...Astro.props}
  class={`${href ? "hover:bg-gray-800 hover:border-gray-900 active:bg-black hover:text-white focus:outline-none focus-visible:ring-yellow-500/80  focus-visible:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-offset-2" : "line-through cursor-not-allowed"} inline-flex items-center justify-center gap-2 px-3 py-2 space-x-2 text-base text-white transition bg-gray-800 border border-gray-600 text-md group max-w-fit rounded-xl`}
>
  <slot />
</a>
