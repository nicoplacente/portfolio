---
const personalImageAlt = "Nico Placente"
import Badge from "@/components/Badge.astro"
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
import MailIcon from "@/components/icons/Mail.astro"
import SocialPill from "@/components/SocialPill.astro"
import Location from '../components/icons/Location.astro'
import GitHub from "./icons/GitHub.astro"
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/nicoplacente.webp"
      alt={personalImageAlt}
      title={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/nicolas-placente-366627291/"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hola, soy Nico Placente
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    +2 años de experiencia. <strong
      >Desarrollador y Programador Full Stack y Productor Musical</strong
    > Especializado en el desarrollo de aplicaciones web
    únicas.
  </p>

  <p class="text-red-200/90 text-xl flex items-center gap-2 mt-4 text-pretty"><Location /> Coronel Suárez - Buenos Aires - Argentina</p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:nicolasplacente@gmail.com">
      <MailIcon class="size-4" />
      nicolasplacente@gmail.com
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/nicolas-placente-366627291/">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/nicoplacente">
      <GitHub class="size-4"/>
      Github
    </SocialPill>
  </nav>
</div>
